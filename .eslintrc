{
    "parser": "babel-eslint",
    "plugins": ["react"],
	"rules": {
        "strict": 0,
		"indent": [2, "tab"],
		"quotes": [2, "single"],
		"linebreak-style": [2, "unix"],
		"semi": [2, "always"],
        "no-unused-vars": [2, {
            "args": "after-used",
            "argsIgnorePattern": "^t$"
        }],
        "no-console": 0
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
	},
	"ecmaFeatures": {
  		"jsx": true
	},
	"extends": "eslint:recommended"
}
