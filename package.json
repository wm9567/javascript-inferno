{
  "name": "inferno-build",
  "private": true,
  "license": "MIT",
  "version": "4.0.0",
  "author": {
    "name": "Dominic Gannaway",
    "email": "dg@domgan.com"
  },
  "bugs": {
    "url": "https://github.com/infernojs/inferno/issues"
  },
  "homepage": "https://github.com/infernojs/inferno#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/infernojs/inferno.git"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "pre-commit": {
    "silent": true,
    "run": [
      "circularDeps",
      "lint",
      "test"
    ]
  },
  "scripts": {
    "clean": "lerna exec -- rimraf dist .rpt2_cache_development .rpt2_cache_production",
    "circularDeps": "lerna exec -- madge --circular src/index.ts",
    "coveralls": "coveralls < coverage/lcov.info || true",
    "debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand --no-cache --no-watchman",
    "prebuild": "npm run clean",
    "postbuild": "rimraf build",
    "build": "run-s build:**",
    "prebuild:typings": "rimraf build",
    "build:typings": "tsc && lerna exec -- node ../../scripts/typings/build.js",
    "build:es": "npm run rollup -- --name=index.es --env=production --format=es --optimize=false --uglify=false",
    "build:node": "npm run rollup -- --format=cjs --replace=false --name=index --uglify=false",
    "build:umd:dev": "npm run rollup -- --uglify=false",
    "build:umd:prod": "npm run rollup -- --env=production --ext=.min.js",
    "predocs": "rimraf docs",
    "docs": "typedoc",
    "examples": "npm run --prefix examples start",
    "lint": "tslint -p tsconfig.json --type-check",
    "lint-staged": "lint-staged",
    "publish": "lerna publish --exact --force-publish=* --skip-git --skip-npm && npm run build && npm run test && lerna publish --exact",
    "prepublishOnly": "npm run build",
    "prettier": "npm-run-all prettier:src:*",
    "prettier:src:js": "prettier --write --list-different packages/*/__tests__/**/*.{js,jsx}",
    "prettier:src:ts": "prettier --write --list-different --parser=typescript packages/*/src/**/*.{ts,tsx}",
    "prettier:src:fixtures": "prettier --write --list-different fixtures/**/*.{js,jsx}",
    "prettier:src:scripts": "prettier --write --list-different scripts/**/*.{js,jsx}",
    "postinstall": "lerna bootstrap",
    "rollup": "lerna exec -- node ../../scripts/rollup/build.js",
    "test": "cross-env NODE_ENV=test jest --no-cache",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:browser": "npm run --prefix fixtures/browser test",
    "test:react": "npm run --prefix fixtures/react test -- --forceExit",
    "test:package": "node fixtures/packaging/build-all.js",
    "uninstall": "lerna clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/history": "^4.6.2",
    "@types/jest": "^21.1.8",
    "@types/node": "^8.0.53",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-inferno": "^3.3.0",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-es2015-modules-umd": "^6.24.1",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-undefined-to-void": "^6.8.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "cli-table": "^0.3.1",
    "concat-stream-es6": "0.0.1",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.1",
    "dts-bundle": "^0.7.3",
    "history": "^4.7.2",
    "jest": "^21.2.1",
    "jsdom": "^11.5.1",
    "lerna": "2.5.1",
    "lint-staged": "^5.0.0",
    "madge": "^2.2.0",
    "minimist": "^1.2.0",
    "npm-run-all": "^4.1.2",
    "optimize-js": "^1.0.3",
    "pre-commit": "^1.2.2",
    "prettier": "^1.8.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.52.0",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-buble": "^0.18.0",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-typescript2": "0.8.2",
    "rollup-plugin-uglify": "^2.0.1",
    "sinon": "^4.1.2",
    "ts-jest": "^21.2.3",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "typedoc": "^0.9.0",
    "typedoc-plugin-external-module-name": "^1.0.10",
    "typescript": "^2.6.2"
  }
}
