{
  "name": "inferno",
  "version": "0.2.3",
  "description": "A framework for building lightning fast user interfaces",
  "main": "inferno.js",
  "scripts": {
    "preinstall": "npm install -g webpack",
    "test-win": "webpack-dev-server --config test.config.js --hot --inline 'mocha!.\\tests\\tests.js'",
    "test": "webpack-dev-server --config test.config.js --hot --inline 'mocha!./tests/tests.js'",
    "dev-watch": "webpack-dev-server --config webpack.config.js --hot --inline",
    "dev": "webpack --config webpack.config.js --inline",
    "build": "PROD_DEV=1 webpack --config webpack.config.js --inline"
  },
  "dependencies": {
    "babel-runtime": "^5.8.24",
    "t7": "~0.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/trueadm/inferno.git"
  },
  "author": "Dominic Gannaway",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/trueadm/inferno/issues"
  },
  "homepage": "https://github.com/trueadm/inferno#readme",
  "devDependencies": {
    "babel-core": "^5.8.25",
    "babel-loader": "^5.3.2",
    "chai": "^3.3.0",
    "mocha": "^2.3.3",
    "mocha-loader": "^0.7.1",
    "uglify-loader": "^1.2.0",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.11.0",
    "webpack-windows": "0.0.3"
  }
}
