{
	"compilerOptions": {
		"target": "es6",
		"module": "es2015",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"lib": [
			"es6",
			"es7",
			"dom"
		],
		"types": [
			"node",
			"mocha",
			"chai",
			"sinon"
		],
		"jsx": "preserve",
		"noUnusedLocals": true,
		"strictNullChecks": false,
		"removeComments": false
	}
}
